{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": false
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
	},
	"globals": {
		"Vue": true
	},
    "rules": {
		"no-console":0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
		],
		"curly": "error"
    }
}
